<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.overview.OverviewFragment">

    <TextView
        android:id="@+id/text_overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView android:layout_marginTop="30dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:text="This Month"
                android:textAlignment="center"
                android:textSize="20sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TableLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TableRow
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:padding="10dp">
                            <TextView
                                android:textColor="#000"
                                android:fontFamily="serif"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:text="Income"
                                android:textColorHighlight="#000"
                                android:textSize="20sp"/>
                            <TextView
                                android:id="@+id/lblIncomeThisMonth"
                                android:textColor="#000"
                                android:fontFamily="serif"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:textAlignment="center"
                                android:layout_weight="1"
                                android:text="Value"
                                android:gravity="center_horizontal"
                                android:textColorHighlight="#000"
                                android:textSize="20sp" />

                        </TableRow>
                        <TableRow
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:padding="10dp">

                            <TextView
                                android:textColor="#000"
                                android:fontFamily="serif"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:text="Cost"
                                android:textColorHighlight="#000"
                                android:textSize="20sp"/>
                            <TextView
                                android:id="@+id/lblCostThisMonth"
                                android:textColor="#000"
                                android:fontFamily="serif"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:textAlignment="center"
                                android:layout_weight="1"
                                android:text="Value"
                                android:gravity="center_horizontal"
                                android:textColorHighlight="#000"
                                android:textSize="20sp" />

                        </TableRow>
                        <View
                            android:layout_height="3dip"
                            android:layout_width="match_parent"
                            android:background="#858585"/>
                        <TableRow
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:padding="10dp">

                            <TextView
                                android:textColor="#000"
                                android:fontFamily="serif"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:text="Asset"
                                android:textColorHighlight="#000"
                                android:textSize="20sp"/>
                            <TextView
                                android:id="@+id/lblAssetThisMonth"
                                android:textColor="#000"
                                android:fontFamily="serif"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:textAlignment="center"
                                android:layout_weight="1"
                                android:text="Value"
                                android:gravity="center_horizontal"
                                android:textColorHighlight="#000"
                                android:textSize="20sp"/>

                        </TableRow>
                    </TableLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:text="This Year"
                android:textAlignment="center"
                android:textSize="20sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TableLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TableRow
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:padding="10dp">
                            <TextView
                                android:textColor="#000"
                                android:fontFamily="serif"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:text="Income"
                                android:textColorHighlight="#000"
                                android:textSize="20sp"/>
                            <TextView
                                android:id="@+id/lblIncomeThisYear"
                                android:textColor="#000"
                                android:fontFamily="serif"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:textAlignment="center"
                                android:layout_weight="1"
                                android:text="Value"
                                android:gravity="center_horizontal"
                                android:textColorHighlight="#000"
                                android:textSize="20sp" />

                        </TableRow>
                        <TableRow
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:padding="10dp">

                            <TextView
                                android:textColor="#000"
                                android:fontFamily="serif"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:text="Cost"
                                android:textColorHighlight="#000"
                                android:textSize="20sp"/>
                            <TextView
                                android:id="@+id/lblCostThisYear"
                                android:textColor="#000"
                                android:fontFamily="serif"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:textAlignment="center"
                                android:layout_weight="1"
                                android:text="Value"
                                android:gravity="center_horizontal"
                                android:textColorHighlight="#000"
                                android:textSize="20sp" />

                        </TableRow>
                        <View
                            android:layout_height="3dip"
                            android:layout_width="match_parent"
                            android:background="#858585"/>
                        <TableRow
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:padding="10dp">

                            <TextView
                                android:textColor="#000"
                                android:fontFamily="serif"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:text="Asset"
                                android:textColorHighlight="#000"
                                android:textSize="20sp"/>
                            <TextView
                                android:id="@+id/lblAssetThisYear"
                                android:textColor="#000"
                                android:fontFamily="serif"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:textAlignment="center"
                                android:layout_weight="1"
                                android:text="Value"
                                android:gravity="center_horizontal"
                                android:textColorHighlight="#000"
                                android:textSize="20sp"/>

                        </TableRow>
                    </TableLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:text="Loans Details"
                android:textAlignment="center"
                android:textSize="20sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/lblNumberOfLoans"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:fontFamily="serif"
                        android:text="Loans(1)"
                        android:gravity="center"/>

                    <TableLayout
                        android:layout_marginTop="10dp"
                        android:id="@+id/table_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TableRow
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:id="@+id/table_row1"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/name"
                                android:fontFamily="serif"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:textColor="#000"
                                android:text="Account"/>
                            <TextView
                                android:id="@+id/age"
                                android:textColor="#000"
                                android:fontFamily="serif"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:text="Acc Name"/>
                            <TextView
                                android:textColor="#000"
                                android:id="@+id/position"
                                android:fontFamily="serif"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:text="Current Balance"/>
                            <TextView
                                android:textColor="#000"
                                android:id="@+id/address"
                                android:fontFamily="serif"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:text="Next Payment"/>

                        </TableRow>
                        <View
                            android:layout_height="3dip"
                            android:layout_width="match_parent"
                            android:background="#ff0000"/>
                    </TableLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>